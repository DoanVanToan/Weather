<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.fs_sournary.weather.screen.main.fragment.forecast.ItemForecastViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/dp_8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_96"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:contentDescription="@string/description_weather"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:image="@{viewModel.getIdImageWeather}" />

            <TextView
                android:id="@+id/text_summary_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:maxWidth="@dimen/dp_240"
                android:text="@{viewModel.summary}"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@{viewModel.temperature}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/text_summary_weather"
                app:layout_constraintTop_toBottomOf="@id/text_summary_weather" />

            <TextView
                android:id="@+id/text_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/title_o"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/text_temperature"
                app:layout_constraintTop_toBottomOf="@id/text_summary_weather" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/text_o"
                app:layout_constraintTop_toTopOf="@id/text_o" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{viewModel.lastUpdateTime}"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_temperature"
                app:layout_constraintTop_toBottomOf="@id/text_temperature" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>